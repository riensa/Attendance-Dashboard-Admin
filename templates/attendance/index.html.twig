{# templates/list/index.html.twig #} {% extends 'base.html.twig' %} {% block
body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Attendance List</div>
          <AmpContent>
          <table class="table">
            <tr>
              <th>Date</th>
              <th>Start Time</th>
              <th>End Time</th>
              <th>Attendance Type</th>
              <th>Employee Name</th>
              <th>Description</th>
              <th>Workhours</th>
            </tr>
            {% for key, item in data %}
            <tr>
              <td>{{ item.date }}</td>
              <td>{{ item.starttime }}</td>
              <td>{{ item.endtime }}</td>
              <td>{{ item.type }}</td>
              <td>{{ item.employee.fullname }}</td>
              <td>{{ item.description }}</td>
              <td>{{ item.workhours }} hours</td>
            </tr>
            {% endfor %}
          </table>
          
</NonAmpContent>
        </div>
      </div>
      <AmpContent>
      <a href="{{ path('app_login') }}" class="btn btn-info">
        You need to login to see the list >></a
      >
      
</NonAmpContent>
    </div>
  </div>
</div>
{% endblock %}
